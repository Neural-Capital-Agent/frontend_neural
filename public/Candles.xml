      <line x1="15" y1="10" x2="15" y2="40" stroke="currentColor" stroke-width="2"/>
      <rect x="10" y="20" width="10" height="20" fill="currentColor" opacity="0.8"/>
      
      <!-- Candlestick 2 -->
      <line x1="35" y1="5" x2="35" y2="45" stroke="currentColor" stroke-width="2"/>
      <rect x="30" y="15" width="10" height="15" fill="currentColor" opacity="0.8"/>
      
      <!-- Candlestick 3 -->
      <line x1="55" y1="15" x2="55" y2="35" stroke="currentColor" stroke-width="2"/>
      <rect x="50" y="25" width="10" height="10" fill="currentColor" opacity="0.8"/>
    </pattern>
  </defs>
  <rect width="100%" height="100%" fill="url(#candlePattern)"/>
</svg>
